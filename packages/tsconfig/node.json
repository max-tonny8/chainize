{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node@18",
  "extends": "./core.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "ES2021"
  },
  "exclude": ["node_modules", "dist"]
}
